{
	"manifest_version": 2,
	"name": "Colour mapper",
	"version": "0.0.1",
	"description": "Chrome devtools extension to detect the amount of times a colour is applied to an element via a CSS rule.",
	"minimum_chrome_version": "20.0.1132.57",
	"devtools_page": "html/devtools.html",	
	"background":{
		"scripts":["scripts/background.js"]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["scripts/libs/jquery-2.0.3.min.js", "scripts/content.js"]
		}
	],
	"permissions":[
		"tabs", 
		"http://*/*"
	]
}